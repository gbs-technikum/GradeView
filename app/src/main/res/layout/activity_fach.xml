<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="gradieview.sabel.com.gradeview.FachActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Schulaufgabe" />

        <Button
            android:id="@+id/btnSAplus"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="+" />

        <Button
            android:id="@+id/btnSAminus"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="-" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtViewSa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <EditText
            android:id="@+id/editText"
            android:digits="123456"
            android:inputType="number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kurzarbeit" />

        <Button
            android:id="@+id/btnKAplus"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="+" />

        <Button
            android:id="@+id/btnKAminus"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="-" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MÃ¼ndlich" />


        <Button
            android:id="@+id/btnMUEplus"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="+" />

        <Button
            android:id="@+id/btnMUEminus"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="-" />

    </LinearLayout>


</LinearLayout>
